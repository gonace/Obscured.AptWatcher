{
  "name": "Obscured.AptWatcher",
  "description": "Obscured.AptWatcher is a simple Sinatra app that helps you keep track of packages that need updating on your servers.",
  "keywords": [
    "apt",
    "aptitude",
    "rpm",
    "pacman",
    "portage",
    "yum",
    "linux",
    "nix",
    "ruby",
    "slack",
    "bootstrap",
    "dashboard",
    "statistics",
    "updates"
  ],
  "repository": "https://github.com/gonace/Obscured.AptWatcher",
  "success_url": "/setup",
  "env": {
    "SETUP_AUTHORIZATION": {
      "description": "The password used to authenticate during initial application setup",
      "generator": "secret"
    }
  },
  "image": "heroku/ruby",
  "addons": [
    "mongolab",
    {
      "plan": "mongolab:sandbox"
    },
    {
      "plan": "mongolab:shared-cluster-1"
    },
    {
      "plan": "mongolab:shared-cluster-2"
    },
    {
      "plan": "mongolab:shared-cluster-4"
    },
    {
      "plan": "mongolab:dedicated-cluster-m1"
    },
    {
      "plan": "mongolab:dedicated-cluster-m2"
    }
  ]
}
