.min-vh-100.py-5.d-flex.align-items-center
  .w-100
    .row.justify-content-center
      .col-sm-8.col-lg-5.col-xl-4
        .card.shadow.zindex-100.mb-0
          .card-body.px-md-5.py-5
            .mb-5
              %h6.h3 Password reset
              %p.text-muted.mb-0 Enter your email below to proceed.
              = partial :'../shared/partials/alerts'
            %span.clearfix
            %form{:action => '/doorman/forgot', :method => 'POST', :role => "form"}
              %input#Email{:name => 'user[email]', :type => 'hidden', :value => email}
              %input#confirmToken{:name => 'user[confirm_token]', :type => 'hidden', :value => confirm_token}
              .form-group.mb-4
                .d-flex.align-items-center.justify-content-between
                  %div
                    %label.form-control-label Password
                .input-group.input-group-merge
                  .input-group-prepend
                    %span.input-group-text
                      %i.fas.fa-key
                  %input#input-password.form-control{:placeholder => "Password", :type => "password", :name => 'user[password]'}
                  .input-group-append
                    %span.input-group-text
                      %a{"data-target" => "#input-password", "data-toggle" => "password-text", :href => "#"}
                        %i.fas.fa-eye
              .form-group.mb-4
                .d-flex.align-items-center.justify-content-between
                  %div
                    %label.form-control-label Confirmation
                .input-group.input-group-merge
                  .input-group-prepend
                    %span.input-group-text
                      %i.fas.fa-key
                  %input#input-confirmation.form-control{:placeholder => "Password", :type => "password", :name => 'user[password_confirmation]'}
                  .input-group-append
                    %span.input-group-text
                      %a{"data-target" => "#input-confirmation", "data-toggle" => "password-text", :href => "#"}
                        %i.fas.fa-eye
              .mt-4
                %button.btn.btn-sm.btn-primary.btn-icon.rounded-pill{:type => "submit"}
                  %span.btn-inner--text Reset password
                  %span.btn-inner--icon
                    %i.fas.fa-long-arrow-alt-right
          .card-footer.px-md-5
            %small Not registered?
            %a.small.font-weight-bold{:href => "/doorman/register"} Create account