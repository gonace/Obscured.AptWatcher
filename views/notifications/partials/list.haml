.table-responsive{:id => id, 'data-length' => alerts.properties.length, 'data-page' => alerts.properties.page, 'data-page-size' => alerts.properties.page_size, 'data-page-first' => alerts.properties.page_first, 'data-page-last' => alerts.properties.page_last}
  %table.table{'data-sort' => 'table', 'data-sort-list' => '[[1,1]]'}
    %thead
      %tr
        %th.header.headerSortDown Host
        %th.header Created
        %th.header Status
        %th.header Message
        %th.header.text-right Details
    %tbody
      - alerts.items.each do |alert|
        %tr
          %td= alert.hostname
          %td= alert.created_at
          %td= ":#{alert.status}"
          %td= alert.message
          %td.text-right
            %a{:href => "/notifications/view/#{alert._id}"}
              %span.icon.icon-dots-three-horizontal
  = partial :'../shared/partials/pagination', :locals => { :_for => '#' + id, :url => url, :properties => alerts.properties }